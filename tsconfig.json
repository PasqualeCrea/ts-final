{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true
    },
    "watchOptions": {
        "watchDirectory": "useFsEvents",
        "excludeDirectories": [
            "node_modules",
            "dist"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}